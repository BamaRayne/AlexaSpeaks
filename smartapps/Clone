/************************************************************************************************************
   Page status and descriptions 
************************************************************************************************************/       
// MAIN PARENT PAGE
def mIntentComplete(){  //main page
    def result = ""
    if (mDevicesComplete() || mFeedbackComplete()) {
    	result = "complete"	
    }
    result
}
def mIntentSettings() {  //main page
    def text = "Tap here to configure" 
		if (mDevicesComplete() || mFeedbackComplete()) {
    	text = "Configured"
    }
    else text = "Tap here to configure"
	text	
}
def mCreateComplete(){  //main page
    def result = ""
    if (cCreateComplete()) {
    	result = "Control Profiles Created"	
    }
    result
}
def mCreateSettings() {  //main page
    def text = "No Profiles have been configured. Tap here to begin"
    if (cCreateComplete()) {
        text = "One profile has been configured. Tap here to view and change"
    }
    text
}
// MAIN INTENT PAGE
def mDevicesComplete(){
    def result = ""
    if (cSwitch || cVent || cFan || cStat || cDoor || cLock || cMotion || cContact || cPresence || cSpeaker || cBattery || cWeather) {
    	result = "complete"	
    }
    result
}
def mDevicesSettings() {
    def text = "Tap here to configure settings" 
    if (cSwitch || cVent || cFan || cStat || cDoor || cLock || cMotion || cContact || cPresence || cSpeaker || cBattery || cWeather) {
    	text = "Configured"
    }
    else text = "Tap here to choose devices"
	text	
}
